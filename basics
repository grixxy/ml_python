import matplotlib.pyplot as plt
import numpy as np
import math

t = np.linspace(0,0.98,98)
y1 = np.sin(2*math.pi*4*t)
y2 = np.cos(2*math.pi*4*t)
plt.subplot(1,2,1)
plt.plot(t,y1,  label='sin')
plt.subplot(1,2,2)
plt.plot(t,y2, color='r', label='cos')
plt.legend(['sin', 'cos'])
plt.ylabel('value')
plt.xlabel('time')
plt.title('cos/sin')
plt.show()

